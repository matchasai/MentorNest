# Production Environment Variables for MentorNest Backend (Render Deployment)
# IMPORTANT: Replace the values below with your actual Railway database credentials

# Database Configuration (Railway MySQL Database)
# Get these values from your Railway MySQL database dashboard
DATABASE_URL=jdbc:mysql://YOUR_RAILWAY_HOST:PORT/YOUR_DATABASE_NAME?useSSL=true&serverTimezone=UTC
DB_USERNAME=YOUR_RAILWAY_USERNAME
DB_PASSWORD=YOUR_RAILWAY_PASSWORD

# JWT Configuration (IMPORTANT: Generate secure secrets in production)
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=18000000
JWT_REFRESH_EXPIRATION=604800000

# Server Configuration
SERVER_PORT=8081
SPRING_PROFILES_ACTIVE=prod

# File Upload Configuration
FILE_UPLOAD_DIR=/app/uploads/
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# Production Security Settings
SPRINGDOC_API_DOCS_ENABLED=false
SPRINGDOC_SWAGGER_UI_ENABLED=false
